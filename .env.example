# Environment Configuration Template
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development

# Log Level (debug, info, warn, error)
LOG_LEVEL=debug

# VAPI Configuration
# Get your VAPI API token from https://dashboard.vapi.ai
VAPI_TOKEN=your_vapi_token_here

# Server Ports (usually no need to change these)
PORT_VAPI_HANDLER=3000
PORT_LEAD_CRM=3001
PORT_USERDATA_CRM=3002
PORT_CLASSIFICATION_CRM=3003

# Webhook URL for VAPI
# For local development with ngrok: https://your-ngrok-url.ngrok.io/api/vapi/tool-calls
# For production: https://your-domain.com/api/vapi/tool-calls
VAPI_WEBHOOK_URL=http://localhost:3000/api/vapi/tool-calls
